.goods_detail .detail_picture swiper {
  padding: 20rpx;
  height: 500rpx;
}
.goods_detail .detail_picture swiper swiper-item {
  display: flex;
  justify-content: center;
}
.goods_detail .detail_picture swiper swiper-item image {
  width: 60%;
}
.goods_detail .detail_name {
  padding: 10rpx 20rpx 10rpx 20rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goods_detail .goods_detail_info {
  display: flex;
  padding: 0 20rpx 30rpx 20rpx;
  border-bottom: 20rpx solid #eee;
}
.goods_detail .goods_detail_info .detail_info {
  flex: 5;
}
.goods_detail .goods_detail_info .detail_info .detail_price {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  color: var(--themeColor);
  font-size: 40rpx;
  font-weight: 600;
}
.goods_detail .goods_detail_info .detail_info .detail_price span {
  font-size: 24rpx;
}
.goods_detail .goods_detail_info .detail_collect {
  flex: 1;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.goods_detail .goods_detail_info .detail_collect text {
  padding-bottom: 15rpx;
}
.goods_detail .detail_concent {
  padding-top: 50rpx;
}
